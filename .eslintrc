{
  "root": true,
  "extends": ["@nuxt/eslint-config", "plugin:perfectionist/recommended-natural"],
  "plugins": ["tailwindcss", "perfectionist"],
  "rules": {
    "vue/max-attributes-per-line": ["warn", {
      "singleline": {
        "max": 3
      },      
      "multiline": {
        "max": 1
      }
    }],
    "vue/attributes-order": "off"
  }
}
